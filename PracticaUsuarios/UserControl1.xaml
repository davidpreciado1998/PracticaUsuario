<UserControl x:Class="PracticaUsuarios.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticaUsuarios"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <TextBlock Name="tbknombreUsuario">Nombre:</TextBlock>
            <TextBox Name="tbxnombreUsuario" Width="250" SelectionChanged="tbxnombreUsuario_SelectionChanged" HorizontalAlignment="Left"></TextBox>
            <TextBlock>Direccion:</TextBlock>
            <TextBox Name="direccion" Width="250" HorizontalAlignment="Left"></TextBox>
            <TextBlock>Carrera</TextBlock>
            <ComboBox Width="250" HorizontalAlignment="Left">
                <ComboBoxItem>Ing. Multimedia</ComboBoxItem>
                <ComboBoxItem>Otro</ComboBoxItem>
            </ComboBox>
            <TextBlock>Preparatoria de Procedencia:</TextBlock>
            <TextBox Name="Prepa" Width="250" HorizontalAlignment="Left"></TextBox>
            <WrapPanel>
                <Button Width="75" Margin="175,10,0,0">Guardar</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
