<Window x:Class="PracticaUsuarios.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaUsuarios"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
        <TextBlock>Nuevo Usuario</TextBlock>
            <ComboBox Name="cbTipoUsuario" SelectionChanged="cbTipoUsuario_SelectionChanged" Width="150" HorizontalAlignment="Left">
                <ComboBoxItem>Alumno</ComboBoxItem>
                <ComboBoxItem>Maestro</ComboBoxItem>
            </ComboBox>
            <StackPanel Name="panelConfiguration"></StackPanel>
        </StackPanel>
    </Grid>
</Window>
